<html>
	<head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>inventorys</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    </head>
        <body>
        <div class="jumbotron text-center">
        	<h1>Hello!<%= name %></h1>
        	<p> there are <%= nItem %> item</p>
        	<p>	s1235975 Benny</p>
	   		<p></p>           
        </div>
        <div class="container-fluid">
            <div class="row ml-md-auto">
                <a href="/logout" class="btn btn-primary pull-right" role="button">Log out</a>
            </div>
            <br>
           <div class="row">
                <p>Search inventory name:
                <label for="bar"><span class="glyphicon glyphicon-search"></span></label><input style="width:100%" type="text" id="myInput" onkeyup="myFunction()" placeholder="Search name:" name="bar"><br></p>
                <table id="myTable" class="table table-striped table-bordered table-hover table-scroll">
                    <thead><tr class="table-primary"><th>inventory Name</th></tr></thead>
                    <tbody style="height:300px;display:block;overflow:scroll">
                      <% doc.forEach(function(docs) { %>
  						<tr><td><a href=/detail?_id=<%= docs._id.toString()%>><%= docs.name %></a></td>
  						<td style="display:none;"><%= docs.type %></td>
  						<td style="display:none;"><%= docs.quantity %></td>
  						</tr>
  					<% });                        %>  
                    </tbody>
                </table>
            </div>
        </div>
        <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
        
        
        
        </script>
        
        </body>
</html>

